<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="android.Views.NewItemPage">
    <ContentPage.Content>
        <StackLayout Spacing="2" Padding="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50" />
                </Grid.ColumnDefinitions>
                <Editor Grid.Column="0" x:Name="UiNameEdit" Text="Potato" BackgroundColor="White" Margin="0" TextChanged="UiNameEdit_OnTextChanged"/>
                <Button Grid.Column="1" x:Name="UiSubmit" Text="+" Clicked="Save_Clicked"/>
            </Grid>
            <Grid x:Name="SearchResultContainerEntry">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="30" />
                    <ColumnDefinition Width="30" />
                </Grid.ColumnDefinitions>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
